{
  "name": "nextjs-ts-tailwind-template",
  "version": "0.1.3",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "next:lint": "next lint",
    "lint": "pnpm run next:lint && eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,scss}'",
    "prepare": "husky install",
    "check-types": "tsc",
    "validate": "pnpm run prettier & pnpm run lint & pnpm run check-types && pnpm run build"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@next/eslint-plugin-next": "^15.1.6",
    "@tailwindcss/postcss": "^4.0.4",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.19.0",
    "eslint-config-next": "15.1.6",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.4",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint"
    ],
    "*.{js,jsx,ts,tsx,scss}": [
      "pnpm run prettier"
    ]
  },
  "packageManager": "pnpm@9.9.0"
}
