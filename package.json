{
  "name": "nextjs-ts-tailwind-template",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,scss}'",
    "prepare": "husky install",
    "check-types": "tsc",
    "validate": "npm run prettier & npm run lint:eslint & npm run check-types & npm run build"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "sass": "^1.52.1"
  },
  "devDependencies": {
    "@tsconfig/next": "^1.0.2",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.7",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-import": "^2.26.0",
    "husky": ">=8.0.1",
    "lint-staged": ">=12.4.2",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.1.4",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint"
    ],
    "*.{js,jsx,ts,tsx,scss}": [
      "prettier --write"
    ]
  }
}
