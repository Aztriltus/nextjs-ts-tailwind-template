{
  "name": "nextjs-ts-tailwind-template",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,scss}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "next": "12.0.10",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.49.7"
  },
  "devDependencies": {
    "@tsconfig/next": "^1.0.2",
    "@types/node": "^17.0.16",
    "@types/react": "^17.0.39",
    "@typescript-eslint/parser": "^5.11.0",
    "autoprefixer": "^10.4.2",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.10",
    "eslint-plugin-import": "^2.25.4",
    "husky": ">=6",
    "lint-staged": ">=10",
    "postcss": "^8.4.6",
    "prettier": "^2.6.0",
    "tailwindcss": "^3.0.19",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:eslint"
    ],
    "*.{js,jsx,ts,tsx,scss}": [
      "prettier --write"
    ]
  }
}
